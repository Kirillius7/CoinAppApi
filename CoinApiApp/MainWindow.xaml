<Window x:Class="CoinApiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoinApiApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFC1D1D8" Offset="0.367"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="50px"/>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width= "100px"/>
            <ColumnDefinition Width= "*"/>
            <ColumnDefinition Width= "100px"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column ="1">
            <Label HorizontalAlignment="Center" FontFamily="Times New Roman" FontWeight="Bold" FontSize="25px" Background="#00000000">CoinGecko Api
            </Label>
        </StackPanel>
        <Grid Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Width="560">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition Width="20"/>
                <!-- інтервал -->
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Кількість:" Grid.Column="1" FontFamily="Times New Roman" FontSize="20px" FontWeight="DemiBold" Height="30"/>
            <TextBox Width="50" VerticalContentAlignment="Center" TextAlignment="Center"  Grid.Column="2" Text="{Binding CoinCount, UpdateSourceTrigger=PropertyChanged}" FontSize="15px" Margin="3,5,2,10"/>
            <TextBlock Text="Пошук:" Grid.Column="4" FontFamily="Times New Roman" FontSize="20px" FontWeight="DemiBold" Height="30"/>
            <TextBox Width="150" VerticalContentAlignment="Center" Margin="10,5,10,10" Grid.Column="5" 
         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" FontSize="15px"/>
            <Button Content="Знайти" Grid.Column="6" Command="{Binding SearchCommand}" Margin="5,0" Width="75px" FontSize="15px" Height="30px" BorderBrush="Black">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="LightBlue"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
        <StackPanel Grid.Row ="2" Grid.Column ="2" Margin="0,0,0,10" HorizontalAlignment="Center">
            <Button Content="Оновити" Grid.Column ="2" Command="{Binding RefreshCommand}" Margin="5,0" Width="75px" FontSize="15px" Height="30px" BorderBrush="Black">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="LightBlue"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
        <StackPanel Grid.Row ="2" Grid.Column ="1" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
            <TextBlock Text="Сортувати за:" FontFamily="Times New Roman" FontWeight="DemiBold" VerticalAlignment="Center" FontSize="20px"/>
            <Button Content="Назвою" Command="{Binding SortCommand}" CommandParameter="Name" Margin="5,0" Width="75px" FontSize="15px" Height="30px" BorderBrush="Black">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="LightBlue"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Популярністю" Command="{Binding SortCommand}" CommandParameter="MarketCap" Margin="5,0" Width="105px" FontSize="15px" Height="30px" BorderBrush="Black">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="LightBlue"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
        <!--<StackPanel Grid.Row="3">-->
        <DataGrid ItemsSource="{Binding Currencies}" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"
          SelectedItem="{Binding SelectedCoin, Mode=TwoWay}"
          AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ранг" Binding="{Binding Id}" Width="*"/>
                <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Символ" Binding="{Binding Symbol}" Width="*"/>
                <DataGridTextColumn Header="Популярність" Binding="{Binding MarketCap}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <!--</StackPanel>-->

    </Grid>
</Window>
